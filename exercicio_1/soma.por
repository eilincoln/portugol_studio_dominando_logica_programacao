programa
{
	
	funcao inicio()
	{
		real numero1, numero2, soma

		escreva("Digite o primeiro número: ")
		leia(numero1)
		escreva("Digite o segundo número: ")
		leia(numero2)

		soma = numero1 + numero2

		escreva("A soma de ", numero1, " + ", numero2, " é: ", soma)
	}
}
